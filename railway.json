{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": {
    "backend": {
      "source": {
        "repo": "backend"
      },
      "build": {
        "dockerfile": "backend/Dockerfile"
      },
      "deploy": {
        "startCommand": "uvicorn app:app --host 0.0.0.0 --port $PORT",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300
      }
    },
    "frontend": {
      "source": {
        "repo": "."
      },
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run shared && cd electricity-tracker && npm run build"
      },
      "deploy": {
        "startCommand": "cd electricity-tracker && npm run start",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300
      }
    }
  }
}